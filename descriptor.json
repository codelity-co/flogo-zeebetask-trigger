{
  "name": "flogo-zeebeworkflow-trigger",
  "type": "flogo:trigger",
  "version": "0.3.2",
  "title": "Codelity Flogo Zeebe Task Trigger",
  "description": "Codelity Flogo Zeebe Task Trigger",
  "homepage": "https://github.com/codelity-co/flogo-zeebeworkflow-trigger",
  "settings": [
    {
      "name": "zeebeBrokerHost",
      "type": "string",
      "required": true,
      "default": "localhost"
    },
    {
      "name": "zeebeBrokerPort",
      "type": "integer",
      "required": true,
      "default": 26500
    },
    {
      "name": "serviceType",
      "type": "string",
      "required": true,
      "default": "gohub-workflow-task"
    },
    {
      "name": "usePlainTextConnection",
      "type": "boolean",
      "required": true,
      "default": true
    },
    {
      "name": "caCertificatePath",
      "type": "string",
      "required": false,
      "default": ""
    },
    {
      "name": "token",
      "type": "string",
      "required": false,
      "default": ""
    },
    {
      "name": "clientID",
      "type": "string",
      "required": false,
      "default": ""
    },
    {
      "name": "clientSecret",
      "type": "string",
      "required": false,
      "default": ""
    },   
    {
      "name": "audienceEndpoint",
      "type": "string",
      "required": false,
      "default": ""
    },   
    {
      "name": "authorizationServerUrl",
      "type": "string",
      "required": false,
      "default": ""
    },
    {
      "name": "timeoutDurationString",
      "type": "string",
      "required": false,
      "default": ""
    }
  ],
  "handler": {
    "settings": [
      {
        "name": "jobConcurrency",
        "type": "integer",
        "description": "Job concurrency"
      },
      {
        "name": "maxActiveJobs",
        "type": "integer",
        "description": "Max active jobs"
      },
      {
        "name": "pollIntervalDurationString",
        "type": "string",
        "description": "time.Duration format string for poll interval"
      },
      {
        "name": "pollThreshold",
        "type": "float",
        "description": "poll threshold"
      },
      {
        "name": "requestTimeoutDurationString",
        "type": "string",
        "description": "time.Duration format string for request timeout"
      },
      {
        "name": "timeoutDurationString",
        "type": "string",
        "description": "time.Duration format string for timeout"
      }
    ]
  },
  "output": [
    {
      "name": "jobKey",
      "type": "integer",
      "required": true
    },
    {
      "name": "headers",
      "type": "object",
      "required": false
    },
    {
      "name": "inputVariables",
      "type": "object",
      "required": false
    }
  ],
  "reply": [
    {
      "name": "applicationMessageType",
      "type": "string",
      "allowed": ["INFO", "WARNING", "ERROR"],
      "required": true
    },
    {
      "name": "applicationMessageCode",
      "type": "string",
      "required": true
    },
    {
      "name": "applicationMesageText",
      "type": "string",
      "required": true
    },
    {
      "name": "outputVariables",
      "type": "object",
      "required": false
    }
  ]
}
