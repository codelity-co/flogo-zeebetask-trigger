{
  "name": "flogo-zeebeworkflow-trigger",
  "type": "flogo:trigger",
  "version": "0.3.2",
  "title": "Codelity Flogo Zeebe Task Trigger",
  "description": "Codelity Flogo Zeebe Task Trigger",
  "homepage": "https://github.com/codelity-co/flogo-zeebeworkflow-trigger",
  "settings": [
    {
      "name": "zeebeBrokerHost",
      "type": "string",
      "required": true
    },
    {
      "name": "zeebeBrokerPort",
      "type": "integer",
      "required": true
    },
    {
      "name": "bpmnProcessID",
      "type": "string",
      "required": true
    },
    {
      "name": "serviceType",
      "type": "string",
      "required": true
    },
    {
      "name": "usePlainTextConnection",
      "type": "boolean",
      "required": true,
      "default": true
    }
  ],
  "handler": {
    "settings": [
      {
        "name": "concurrency",
        "type": "integer",
        "description": "Job concurrency"
      },
      {
        "name": "maxActiveJobs",
        "type": "integer",
        "description": "Max active jobs"
      }
    ]
  },
  "output": [
    {
      "name": "status",
      "type": "text",
      "required": true
    },
    {
      "name": "result",
      "type": "any"
    }
  ],
  "reply": [
    {
      "name": "status",
      "type": "text",
      "required": true
    },
    {
      "name": "result",
      "type": "any"
    }
  ]
}
